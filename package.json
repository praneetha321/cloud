{
    "name": "CloudKitchen",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@cap-js/postgres": "^1.8.0",
        "@sap/cds": "^7",
        "@sap/xssec": "^3",
        "express": "^4",
        "passport": "^0",
        "pg": "^8.11.5"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7",
        "@sap/ux-specification": "^1.120.11",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-kitchen": "cds watch --open kitchen/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy CloudKitchen --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "db": {
                "impl": "@cap-js/postgres",
                "pool": {
                    "max": 20
                }
            },
            "auth": "xsuaa"
        }
    },
    "sapux": [
        "app/kitchen",
        "app/kitchen",
        "app/kitchen"
    ]
}